FROM php:8.3-fpm-alpine

WORKDIR /var/www

RUN apk add --no-cache \
    libpng-dev libjpeg-turbo-dev freetype-dev \
    mariadb-client mariadb-dev \
    zip unzip \
    nodejs npm \
    bash curl

RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

# RUN touch .env && echo "APP_KEY=dummyappkey123456=" >> .env



RUN curl -sS https://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/composer



# ğŸ” å¿…è¦ãƒ•ã‚¡ã‚¤ãƒ«ã ã‘é †ç•ªã«ã‚³ãƒ”ãƒ¼
COPY composer.json composer.lock ./
COPY package.json vite.config.js ./
COPY resources/ resources/
COPY public/ public/
COPY bootstrap/ bootstrap/
COPY tailwind.config.js ./

# ã‚¢ãƒ—ãƒªå…¨ä½“ã‚³ãƒ”ãƒ¼ï¼ˆæ®‹ã‚Šã®ãƒ•ã‚¡ã‚¤ãƒ«ï¼‰
COPY . .

ENV APP_ENV=production

RUN composer install --no-dev --no-interaction --optimize-autoloader \
    && npm install && npm run build



# æ¨©é™è¨­å®š
RUN chown -R www-data:www-data /var/www
RUN chmod -R 755 /var/www/storage /var/www/bootstrap/cache

RUN php artisan storage:link

# RUN php artisan config:cache \
#     && php artisan route:cache \
#     && php artisan view:cacheï½ƒ



# Dockerfile ã«è¿½åŠ ï¼ˆphp.ini è¨­å®šï¼‰
RUN echo "upload_max_filesize=50M" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "post_max_size=50M" >> /usr/local/etc/php/conf.d/uploads.ini

# ãƒ“ãƒ«ãƒ‰æ™‚ã« .env ã¯ä½¿ã‚ãš Render ã®ç’°å¢ƒå¤‰æ•°ã§ä»£æ›¿
# chmod ã‚„ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªä½œæˆã ã‘ã—ã¦ãŠã
RUN mkdir -p storage/framework/cache/data \
    && chmod -R 775 storage bootstrap/cache

EXPOSE 8080

# CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8080"]
# æœ¬ç•ªã‚µãƒ¼ãƒã§ã¯ php-fpm ã‚’èµ·å‹•ï¼ˆâ†ã“ã“ãŒå¤§äº‹ï¼ï¼‰
# CMD ["php-fpm"]
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8080"]

